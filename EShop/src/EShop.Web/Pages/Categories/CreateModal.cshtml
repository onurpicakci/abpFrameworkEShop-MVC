@page
@using EShop.Localization
@using EShop.Web.Pages.Categories
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model EShop.Web.Pages.Categories.CreateModalModel
@inject IStringLocalizer<EShopResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="Category" asp-page="/Categories/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewCategory"].Value">
            <abp-modal-body>
                <abp-form-content />
            </abp-modal-body>
            <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
        </abp-modal-header>
    </abp-modal>
</abp-dynamic-form>

