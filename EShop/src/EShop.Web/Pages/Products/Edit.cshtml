@page
@using EShop.Localization
@using EShop.Web.Pages.Products
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model EShop.Web.Pages.Products.EditModalModel
@inject IStringLocalizer<EShopResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="Product" asp-page="/Products/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>

